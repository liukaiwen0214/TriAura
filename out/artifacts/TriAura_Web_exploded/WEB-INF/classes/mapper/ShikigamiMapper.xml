<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.triauras.mapper.ShikigamiMapper">
    <!-- 添加结果映射，确保字段正确映射 -->
    <resultMap id="ShikigamiResultMap" type="com.triauras.entity.Shikigami">
        <id property="shikigami_id" column="shikigami_id"/>
        <result property="name" column="name"/>
        <result property="rarity" column="rarity"/>
        <result property="cv" column="cv"/>
        <result property="release_date" column="release_date"/>
        <result property="head_image" column="head_image"/>
        <result property="create_time" column="create_time"/>
        <result property="update_time" column="update_time"/>
        <result property="interactive" column="interactive"/>
        <result property="material_type" column="material_type"/>
    </resultMap>
    <insert id="batchInsertShikigami" parameterType="java.util.List">
        insert into shikigami (shikigami_id, name, rarity,cv, release_date, head_image, create_time, update_time,
        interactive, material_type)
        values
        <foreach collection="shikigamis" item="shikigami" separator=",">
            (#{shikigami.shikigami_id}, #{shikigami.name}, #{shikigami.rarity}, #{shikigami.cv},
            #{shikigami.release_date}, #{shikigami.head_image}, #{shikigami.create_time}, #{shikigami.update_time},
            #{shikigami.interactive}, #{shikigami.material_type})
        </foreach>
    </insert>
    <update id="updateShikigami" parameterType="com.triauras.entity.Shikigami">
        update shikigami
        set name         = #{name},
            rarity       = #{rarity},
            cv           = #{cv},
            release_date = #{release_date},
            create_time = #{create_time},
            interactive  = #{interactive},
            material_type = #{material_type},
            update_time  = #{update_time}
        where shikigami_id = #{shikigami_id};
    </update>
     <select id="findShikigamiById" resultMap="ShikigamiResultMap">
        select * from shikigami where shikigami_id = #{shikigamiId}
    </select>
    <select id="findAllShikigami" resultMap="ShikigamiResultMap">
        select * from shikigami
    </select>
</mapper>