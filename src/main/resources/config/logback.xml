<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!-- 原有配置（日志格式、控制台输出、Spring/Tomcat日志等）保持不变 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n"/>
    <property name="LOG_CHARSET" value="UTF-8"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>${LOG_CHARSET}</charset>
        </encoder>
    </appender>

    <!-- 原有：Spring 相关日志过滤 -->
    <logger name="org.springframework" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="_org.springframework.web.servlet.HandlerMapping.Mappings" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- 原有：Tomcat/Jakarta 相关日志过滤 -->
    <logger name="org.apache.tomcat" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="jakarta.servlet" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- 修改：统一设置所有HttpClient相关日志为WARN级别 -->
    <logger name="org.apache.http" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <!-- 隐藏Apache HttpClient wire级别的DEBUG日志 -->
    <logger name="org.apache.http.wire" level="OFF" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <!-- 新增：确保所有Apache Commons HttpClient相关的日志也被过滤 -->
    <logger name="org.apache.commons.httpclient" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="httpclient.wire" level="OFF" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <!-- 新增：过滤Apache HTTP Components相关的其他日志 -->
    <logger name="org.apache.http.impl" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.apache.http.client" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.apache.http.conn" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- 修改：确保业务包日志配置生效 -->
    <logger name="com.triauras" level="INFO" additivity="true">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- 修改：根日志级别改为INFO，避免输出过多无关日志 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>