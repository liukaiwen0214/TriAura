<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <!-- 控制台输出 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- 为测试类添加专门的日志配置 -->
        <Logger name="com.triauras.service.impl.UsersServiceImplTest" level="INFO" additivity="true">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- 根日志级别设为 INFO -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>